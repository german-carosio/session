<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head") %>
<body>
    <%- include ("./partials/header") %>

    <main>
        <section>
            
            <h2>Registro</h2>   

            <form action="/users/register" method="POST">

                <div class="form">
                
                    <div>
                        <label for="nombre">Nombre / Alias</label>
                        <input type="text" name="nombre" id="nombre" value="<%= locals.oldData ? oldData.nombre : null %>" >
                        <% if (locals.errors && errors.nombre) { %>
                            <div class="invalido">
                                <%= errors.nombre.msg %>
                            </div>
                            <% } %>
                    </div>
                
                    <div>
                        <label for="email">email</label>
                        <input type="text" name="email" id="email" value="<%= locals.oldData ? oldData.email : null %>" >
                        <% if (locals.errors && errors.email) { %>
                            <div class="invalido">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div>
                        <label for="email2">Repetir email</label>
                        <input type="text" name="email2" id="email2">
                    </div>

                                  
                    <div>
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password">
                        <% if (locals.errors && errors.password) { %>
                            <div class="invalido">
                                <%= errors.password.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div>
                        <label for="password2">Contraseña</label>
                        <input type="password" name="password2" id="password2">
                        <% if (locals.errors && errors.password) { %>
                            <div class="invalido">
                                <%= errors.password.msg %>
                            </div>
                            <% } %>
                    </div>

                
                    <button type="submit">Registrar</button>
                
                </div>

            </form>
        </section>

    </main>

    <%- include ("./partials/footer") %>
</body>
</html>